const express = require("express");
const mongoose = require("mongoose");
const skinSeller = require("./model/skinSeller.js");

const app = express();

app.get("/Ajitesh/Buy/:id", async (req, res) => {
  try {
    const skinId = req.params.id;
    console.log("Get Request with skin id - ", skinId);

    // Find the skin with the given skinId
    const skin = await skinSeller.findOne({ skinId: skinId });

    if (!skin) {
      return res.status(404).json({ message: "Skin not found" });
    }

    // Return the username and price of the skin
    res.json({ userName: skin.userName, price: skin.price });
  } catch (err) {
    console.log(err);
    res.status(500).json({ message: err.message });
  }
});
//sell skin by a user
app.post("/Ajitesh/:id", async (req, res) => {
  try {
    const newSkinSeller = await skinSeller.create(req.body);
    await newSkinSeller.save();
    res.status(201).json(newSkinSeller);
  } catch (err) {
    console.error(err);
    res.status(500).json({ message: "Server Error" });
  }
});

// Start the server
const PORT = process.env.PORT || 5001;
app.listen(PORT, () => {
  console.log(`Server is running on port ${PORT}`);
});
